<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="user" namespace="/" extends="common">
        <action name="userAction_*" class="com.shu.user.web.action.UserAction" method="${1}">
            <result name="success" type="redirectAction">userAction_home</result>
            <result name="login">
                <param name="location">/WEB-INF/pages/index.jsp</param>
            </result>
        </action>
    </package>
</struts>